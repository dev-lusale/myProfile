@page "/experience"
@using Portfolio.Shared.Models
@inject IApiService ApiService

<PageTitle>Experience - Bernard Lusale</PageTitle>

<div class="container my-4">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4 text-primary mb-4">Professional Experience</h1>
            <p class="lead mb-5">
                <i class="bi bi-briefcase me-2"></i>
                My journey in software development, showcasing growth, achievements, and technical expertise across various roles and organizations.
            </p>
        </div>
    </div>

    @if (experiences != null && experiences.Any())
    {
        <div class="timeline">
            @foreach (var experience in experiences.OrderByDescending(e => e.StartDate))
            {
                <div class="timeline-item mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="experience-dates">
                                        <span class="badge bg-primary mb-2">
                                            @experience.StartDate.ToString("MMM yyyy") - 
                                            @(experience.EndDate?.ToString("MMM yyyy") ?? "Present")
                                        </span>
                                        @if (!string.IsNullOrEmpty(experience.Company))
                                        {
                                            <h6 class="text-muted">@experience.Company</h6>
                                        }
                                    </div>
                                </div>
                                <div class="col-md-9">
                                    <h4 class="card-title text-primary">@experience.Position</h4>
                                    @if (!string.IsNullOrEmpty(experience.Description))
                                    {
                                        <p class="card-text">@experience.Description</p>
                                    }
                                    
                                    @if (experience.Achievements != null && experience.Achievements.Any())
                                    {
                                        <div class="achievements mt-3">
                                            <h6 class="text-success"><i class="bi bi-trophy me-2"></i>Key Achievements:</h6>
                                            <ul class="list-unstyled">
                                                @foreach (var achievement in experience.Achievements)
                                                {
                                                    <li class="mb-1">
                                                        <i class="bi bi-check-circle text-success me-2"></i>@achievement
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    }
                                    
                                    @if (experience.Technologies != null && experience.Technologies.Any())
                                    {
                                        <div class="technologies mt-3">
                                            <h6><i class="bi bi-gear me-2"></i>Technologies Used:</h6>
                                            <div class="d-flex flex-wrap gap-1">
                                                @foreach (var tech in experience.Technologies)
                                                {
                                                    <span class="badge bg-secondary">@tech</span>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading experience...</p>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            No experience data available at the moment.
        </div>
    }
</div>

<style>
    .timeline-item {
        position: relative;
    }

    .timeline-item:not(:last-child)::after {
        content: '';
        position: absolute;
        left: 15px;
        top: 100%;
        width: 2px;
        height: 30px;
        background: linear-gradient(to bottom, #0d6efd, #dee2e6);
    }

    .timeline-item::before {
        content: '';
        position: absolute;
        left: 10px;
        top: 20px;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: linear-gradient(135deg, #0d6efd, #0056b3);
        border: 3px solid #fff;
        box-shadow: 0 0 0 3px #dee2e6, 0 2px 8px rgba(13, 110, 253, 0.3);
        z-index: 1;
    }

    .card {
        margin-left: 40px;
        border: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15);
    }

    .experience-dates .badge {
        font-size: 0.85rem;
        padding: 0.5rem 0.75rem;
        background: linear-gradient(135deg, #0d6efd, #0056b3) !important;
    }

    .achievements ul li {
        padding: 0.25rem 0;
        border-left: 3px solid transparent;
        padding-left: 1rem;
        transition: border-color 0.2s ease;
    }

    .achievements ul li:hover {
        border-left-color: #28a745;
        background-color: rgba(40, 167, 69, 0.05);
    }

    .technologies .badge {
        font-size: 0.8rem;
        padding: 0.4rem 0.6rem;
        margin: 0.1rem;
        background-color: #6c757d !important;
        transition: background-color 0.2s ease;
    }

    .technologies .badge:hover {
        background-color: #495057 !important;
        transform: scale(1.05);
    }

    .card-title {
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .text-muted {
        font-weight: 500;
    }

    @@media (max-width: 768px) {
        .timeline-item::before {
            display: none;
        }
        
        .timeline-item::after {
            display: none;
        }
        
        .card {
            margin-left: 0;
        }
    }
</style>

@code {
    private List<Portfolio.Shared.Models.Experience>? experiences;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            experiences = await ApiService.GetExperienceAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading experience: {ex.Message}");
            experiences = new List<Portfolio.Shared.Models.Experience>();
        }
        finally
        {
            isLoading = false;
        }
    }
}