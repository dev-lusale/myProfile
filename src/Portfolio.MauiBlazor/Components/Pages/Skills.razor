@page "/skills"
@using Portfolio.Shared.Models
@inject IApiService ApiService

<PageTitle>Skills - Bernard Lusale</PageTitle>

<div class="container my-4">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4 text-primary mb-4">Technical Skills</h1>
            <p class="lead mb-5">Here are the technologies and tools I work with regularly.</p>
        </div>
    </div>

    @if (skills != null && skills.Any())
    {
        <div class="row">
            @foreach (var skillCategory in skills.GroupBy(s => s.Category))
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">@skillCategory.Key</h5>
                        </div>
                        <div class="card-body">
                            @foreach (var skill in skillCategory.OrderByDescending(s => s.ProficiencyLevel))
                            {
                                <div class="skill-item mb-3">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <span class="skill-name">@skill.Name</span>
                                        <span class="badge bg-secondary">@skill.ProficiencyLevel%</span>
                                    </div>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar bg-primary" 
                                             role="progressbar" 
                                             style="width: @(skill.ProficiencyLevel)%"
                                             aria-valuenow="@skill.ProficiencyLevel" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading skills...</p>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            No skills data available at the moment.
        </div>
    }
</div>

@code {
    private List<Skill>? skills;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            skills = await ApiService.GetSkillsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading skills: {ex.Message}");
            skills = new List<Skill>();
        }
        finally
        {
            isLoading = false;
        }
    }
}