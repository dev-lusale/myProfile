@inject IJSRuntime JSRuntime

<div class="theme-toggle-container">
    <button class="theme-toggle-btn" @onclick="ToggleTheme" title="@(isDarkMode ? "Switch to Light Mode" : "Switch to Dark Mode")">
        <div class="toggle-icon">
            @if (isDarkMode)
            {
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M21.64 13a1 1 0 0 0-1.05-.14 8.05 8.05 0 0 1-3.37.73A8.15 8.15 0 0 1 9.08 5.49a8.59 8.59 0 0 1 .25-2A1 1 0 0 0 8 2.36a10.14 10.14 0 1 0 14 11.69 1 1 0 0 0-.36-1.05Zm-9.5 6.69A8.14 8.14 0 0 1 7.08 5.22v.27A10.15 10.15 0 0 0 17.22 15.63a9.79 9.79 0 0 0 2.1-.22A8.11 8.11 0 0 1 12.14 19.73Z" fill="currentColor"/>
                </svg>
            }
            else
            {
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 2.25a.75.75 0 01.75.75v2.25a.75.75 0 01-1.5 0V3a.75.75 0 01.75-.75zM7.5 12a4.5 4.5 0 119 0 4.5 4.5 0 01-9 0zM18.894 6.166a.75.75 0 00-1.06-1.06l-1.591 1.59a.75.75 0 101.06 1.061l1.591-1.59zM21.75 12a.75.75 0 01-.75.75h-2.25a.75.75 0 010-1.5H21a.75.75 0 01.75.75zM17.834 18.894a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 10-1.061 1.06l1.59 1.591zM12 18a.75.75 0 01.75.75V21a.75.75 0 01-1.5 0v-2.25A.75.75 0 0112 18zM7.758 17.303a.75.75 0 00-1.061-1.06l-1.591 1.59a.75.75 0 001.06 1.061l1.591-1.59zM6 12a.75.75 0 01-.75.75H3a.75.75 0 010-1.5h2.25A.75.75 0 016 12zM6.697 7.757a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 00-1.061 1.06l1.59 1.591z" fill="currentColor"/>
                </svg>
            }
        </div>
        <span class="toggle-label">@(isDarkMode ? "Dark" : "Light")</span>
    </button>
</div>

@code {
    private bool isDarkMode = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try 
            {
                // Check for saved theme preference
                var savedTheme = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "theme-preference");
                isDarkMode = savedTheme == "dark";
                
                // Apply theme using JavaScript function
                await JSRuntime.InvokeVoidAsync("applyTheme", isDarkMode);
                StateHasChanged();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Theme initialization error: {ex.Message}");
                isDarkMode = false;
            }
        }
    }

    private async Task ToggleTheme()
    {
        try
        {
            isDarkMode = !isDarkMode;
            
            // Apply theme using JavaScript function
            await JSRuntime.InvokeVoidAsync("applyTheme", isDarkMode);
            
            // Save preference
            await JSRuntime.InvokeVoidAsync("saveThemePreference", isDarkMode);
            
            Console.WriteLine($"Theme toggled to: {(isDarkMode ? "dark" : "light")}");
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Theme toggle error: {ex.Message}");
        }
    }
}

<style>
    .theme-toggle-container {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 9999;
    }

    .theme-toggle-btn {
        display: flex;
        align-items: center;
        gap: 8px;
        background: var(--card-bg, #ffffff);
        border: 2px solid #667eea;
        border-radius: 30px;
        padding: 10px 16px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px var(--shadow-color, rgba(0, 0, 0, 0.15));
        font-size: 14px;
        font-weight: 600;
        color: var(--text-primary, #333);
        min-width: 100px;
        justify-content: center;
    }

    .theme-toggle-btn:hover {
        background: var(--bg-primary, #ffffff);
        transform: translateY(-2px);
        box-shadow: 0 6px 25px var(--shadow-color, rgba(0, 0, 0, 0.2));
        border-color: #764ba2;
    }

    .toggle-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 20px;
        height: 20px;
    }

    .toggle-icon svg {
        transition: transform 0.3s ease;
    }

    .theme-toggle-btn:hover .toggle-icon svg {
        transform: rotate(15deg);
    }

    .toggle-label {
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 0.8px;
        font-weight: 700;
    }

    /* Dark mode styles */
    :global(body.dark-mode) .theme-toggle-btn {
        background: var(--card-bg, rgba(30, 41, 59, 0.95));
        border-color: #94a3b8;
        color: var(--text-primary, #e2e8f0);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
    }

    :global(body.dark-mode) .theme-toggle-btn:hover {
        background: var(--bg-secondary, rgba(30, 41, 59, 1));
        border-color: #e2e8f0;
        box-shadow: 0 6px 25px rgba(0, 0, 0, 0.6);
    }

    /* Mobile responsive */
    @@media (max-width: 768px) {
        .theme-toggle-container {
            top: 15px;
            right: 15px;
        }

        .theme-toggle-btn {
            padding: 8px 12px;
            font-size: 12px;
            min-width: 85px;
        }

        .toggle-icon {
            width: 18px;
            height: 18px;
        }

        .toggle-label {
            font-size: 10px;
        }
    }

    /* Small mobile */
    @@media (max-width: 480px) {
        .theme-toggle-container {
            top: 10px;
            right: 10px;
        }

        .theme-toggle-btn {
            padding: 6px 10px;
            min-width: 75px;
        }
    }
</style>