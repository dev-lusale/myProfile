@page "/experience"
@inject IAnalyticsService AnalyticsService

<PageTitle>Experience - Portfolio</PageTitle>

<div class="experience-container">
    <BackButton />
    <div class="experience-header">
        <h1>Professional Experience</h1>
        <p class="lead">
            <i class="bi bi-briefcase me-2"></i>
            My journey in cybersecurity and software development, showcasing growth, achievements, and technical expertise.
        </p>
    </div>

    <div class="timeline">
        <div class="timeline-item">
            <div class="timeline-marker"></div>
            <div class="timeline-content">
                <div class="experience-header-info">
                    <h3>Cybersecurity Analyst</h3>
                    <h4>Future Interns</h4>
                    <div class="experience-period">
                        Jun 2024 - Present
                    </div>
                </div>
                
                <p class="experience-description">
                    Competitive cybersecurity internship focused on protecting digital assets and enhancing security posture. 
                    Selected based on strong foundation in cybersecurity, problem-solving skills, and passion for digital security. 
                    Engaged in hands-on security testing and incident response activities.
                </p>
                
                <div class="achievements">
                    <h5><i class="bi bi-trophy me-2"></i>Key Achievements:</h5>
                    <ul>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Selected for competitive cybersecurity internship based on strong technical foundation</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Completed Web Application Security Testing as first major project</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Implemented Security Alert Monitoring & Incident Response procedures</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Gained hands-on experience with penetration testing and vulnerability assessment</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Developed skills in threat analysis and security incident management</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Applied cybersecurity best practices in real-world scenarios</li>
                    </ul>
                </div>
                
                <div class="technologies">
                    <h5><i class="bi bi-gear me-2"></i>Technologies Used:</h5>
                    <div class="tech-tags">
                        <span class="tech-tag">Wireshark</span>
                        <span class="tech-tag">Metasploit</span>
                        <span class="tech-tag">Burp Suite</span>
                        <span class="tech-tag">Nmap</span>
                        <span class="tech-tag">Linux</span>
                        <span class="tech-tag">Fiddler</span>
                        <span class="tech-tag">Security Testing</span>
                        <span class="tech-tag">Incident Response</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        await AnalyticsService.TrackPageViewAsync("/experience", "Experience");
    }
}

<style>
    .experience-container {
        max-width: 900px;
        margin: 0 auto;
        padding: clamp(1rem, 4vw, 2rem);
    }

    .experience-header {
        text-align: center;
        margin-bottom: clamp(2.5rem, 8vw, 4rem);
    }

    .experience-header h1 {
        font-size: clamp(2rem, 5vw, 2.5rem);
        margin-bottom: 1rem;
        color: #333;
    }

    .lead {
        font-size: clamp(1rem, 2.5vw, 1.2rem);
        color: #666;
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.6;
    }

    .timeline {
        position: relative;
        padding-left: clamp(1.5rem, 4vw, 2rem);
    }

    .timeline::before {
        content: '';
        position: absolute;
        left: clamp(0.75rem, 2vw, 1rem);
        top: 0;
        bottom: 0;
        width: 2px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .timeline-item {
        position: relative;
        margin-bottom: clamp(2rem, 6vw, 3rem);
    }

    .timeline-marker {
        position: absolute;
        left: clamp(-1.25rem, -3vw, -1.5rem);
        top: 0.5rem;
        width: clamp(0.8rem, 2vw, 1rem);
        height: clamp(0.8rem, 2vw, 1rem);
        background: #667eea;
        border-radius: 50%;
        border: 3px solid white;
        box-shadow: 0 0 0 3px #667eea;
        z-index: 2;
    }

    .timeline-content {
        background: white;
        padding: clamp(1.2rem, 4vw, 2rem);
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-left: clamp(0.5rem, 2vw, 1rem);
        border: 1px solid #f0f0f0;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .timeline-content:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }

    .experience-header-info h3 {
        margin: 0 0 0.5rem 0;
        color: #333;
        font-size: clamp(1.2rem, 3vw, 1.5rem);
        line-height: 1.3;
    }

    .experience-header-info h4 {
        margin: 0 0 0.5rem 0;
        color: #667eea;
        font-weight: 600;
        font-size: clamp(1rem, 2.5vw, 1.2rem);
    }

    .experience-period {
        color: #666;
        font-size: clamp(0.8rem, 2vw, 0.9rem);
        margin-bottom: 1rem;
        font-weight: 500;
    }

    .experience-description {
        color: #555;
        line-height: 1.6;
        margin-bottom: 1.5rem;
        font-size: clamp(0.9rem, 2vw, 1rem);
    }

    .achievements,
    .technologies {
        margin-top: 1.5rem;
    }

    .achievements h5,
    .technologies h5 {
        margin: 0 0 0.75rem 0;
        color: #333;
        font-size: clamp(0.9rem, 2.2vw, 1rem);
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .achievements ul {
        margin: 0;
        padding-left: 0;
        list-style: none;
    }

    .achievements li {
        margin-bottom: 0.75rem;
        color: #555;
        padding: clamp(0.4rem, 1.5vw, 0.5rem) 0;
        border-left: 3px solid transparent;
        padding-left: clamp(0.8rem, 2vw, 1rem);
        transition: all 0.2s ease;
        font-size: clamp(0.85rem, 2vw, 0.95rem);
        line-height: 1.5;
        display: flex;
        align-items: flex-start;
        gap: 0.5rem;
    }

    .achievements li:hover {
        border-left-color: #28a745;
        background-color: rgba(40, 167, 69, 0.05);
        transform: translateX(5px);
        border-radius: 0 8px 8px 0;
    }

    .tech-tags {
        display: flex;
        flex-wrap: wrap;
        gap: clamp(0.3rem, 1vw, 0.5rem);
    }

    .tech-tag {
        background: #e9ecef;
        color: #495057;
        padding: clamp(0.3rem, 1vw, 0.4rem) clamp(0.6rem, 1.5vw, 0.8rem);
        border-radius: 20px;
        font-size: clamp(0.75rem, 1.8vw, 0.85rem);
        font-weight: 500;
        transition: all 0.2s ease;
        cursor: default;
        white-space: nowrap;
    }

    .tech-tag:hover {
        background: #6c757d;
        color: white;
        transform: scale(1.05);
    }

    /* Mobile Optimizations */
    @@media (max-width: 768px) {
        .timeline {
            padding-left: 1.5rem;
        }

        .timeline::before {
            left: 0.75rem;
        }

        .timeline-marker {
            left: -1rem;
            width: 0.8rem;
            height: 0.8rem;
        }

        .timeline-content {
            margin-left: 0.75rem;
            padding: 1.2rem;
        }
        
        .achievements li {
            flex-direction: column;
            gap: 0.25rem;
        }
        
        .achievements li i {
            align-self: flex-start;
        }
    }

    /* Small Mobile */
    @@media (max-width: 480px) {
        .experience-container {
            padding: 1rem 0.75rem;
        }
        
        .timeline {
            padding-left: 1rem;
        }

        .timeline::before {
            left: 0.5rem;
        }

        .timeline-marker {
            left: -0.75rem;
            width: 0.6rem;
            height: 0.6rem;
            border: 2px solid white;
            box-shadow: 0 0 0 2px #667eea;
        }

        .timeline-content {
            margin-left: 0.5rem;
            padding: 1rem;
        }
        
        .tech-tags {
            gap: 0.25rem;
        }
    }

    /* Tablet Landscape */
    @@media (min-width: 769px) and (max-width: 1024px) and (orientation: landscape) {
        .experience-container {
            padding: 1.5rem;
        }
        
        .experience-header {
            margin-bottom: 2.5rem;
        }
    }

    /* Touch Device Optimizations */
    @@media (hover: none) and (pointer: coarse) {
        .timeline-content:hover {
            transform: none;
        }
        
        .timeline-content:active {
            transform: scale(0.98);
        }
        
        .achievements li:hover {
            transform: none;
            border-left-color: transparent;
            background-color: transparent;
        }
        
        .achievements li:active {
            border-left-color: #28a745;
            background-color: rgba(40, 167, 69, 0.05);
        }
        
        .tech-tag:hover {
            transform: none;
        }
        
        .tech-tag:active {
            transform: scale(0.95);
        }
    }

    /* Landscape Mobile */
    @@media (orientation: landscape) and (max-height: 600px) {
        .experience-container {
            padding: 1rem;
        }
        
        .experience-header {
            margin-bottom: 1.5rem;
        }
        
        .timeline-item {
            margin-bottom: 1.5rem;
        }
        
        .timeline-content {
            padding: 1rem;
        }
    }

    /* High DPI Displays */
    @@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
        .timeline::before {
            width: 1px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .timeline-marker {
            border: 2px solid white;
            box-shadow: 0 0 0 2px #667eea;
        }
    }
</style>