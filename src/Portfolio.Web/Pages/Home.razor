@page "/"
@inject IApiService ApiService
@inject IAnalyticsService AnalyticsService

<PageTitle>Bernard Lusale - Software Engineer Portfolio</PageTitle>

<div class="hero-section">
    <div class="hero-content">
        <h1 class="hero-title">Bernard Lusale</h1>
        <h2 class="hero-subtitle">Software Engineer and Cybersecurity</h2>
        <p class="hero-description">
            Passionate about cybersecurity analysis and building secure web applications with modern technologies.
            Specialized in security testing, vulnerability assessment, and .NET development.
        </p>
        
        <div class="hero-actions">
            <a href="/projects" class="btn btn-primary" @onclick="@(() => TrackEvent("cta_projects_click"))">
                View Projects
            </a>
            <a href="/contact" class="btn btn-outline" @onclick="@(() => TrackEvent("cta_contact_click"))">
                Get In Touch
            </a>
        </div>
        
        <div class="hero-social">
            <SocialLinks />
        </div>
    </div>
    
    <div class="hero-image">
        <img src="/images/dk.jpg" alt="Bernard Lusale Profile" class="profile-image" 
             onerror="this.src='/images/placeholder.svg'; this.alt='Bernard Lusale (placeholder)';" />
    </div>
</div>

<TrendingProjects />

@code {
    private List<Project> trendingProjects = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadTrendingProjects();
        await AnalyticsService.TrackPageViewAsync("/", "Home");
    }

    private async Task LoadTrendingProjects()
    {
        trendingProjects = await ApiService.GetTrendingProjectsAsync();
    }

    private async Task HandleProjectClick(Project project)
    {
        await ApiService.TrackProjectEventAsync(project.Id, "view");
        await AnalyticsService.TrackEventAsync("project_card_click", project.Title);
    }

    private async Task TrackEvent(string eventType)
    {
        await AnalyticsService.TrackEventAsync(eventType);
    }
}

<style>
    .hero-section {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
        align-items: center;
        min-height: 60vh;
        padding: 2rem 0;
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        color: #6c757d;
        margin-bottom: 1rem;
    }

    .hero-description {
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 2rem;
        color: #495057;
    }

    .hero-actions {
        display: flex;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .hero-social {
        display: flex;
        justify-content: center;
    }

    .btn {
        padding: 0.75rem 2rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
    }

    .btn-outline {
        border: 2px solid #667eea;
        color: #667eea;
        background: transparent;
    }

    .btn-outline:hover {
        background: #667eea;
        color: white;
        transform: translateY(-2px);
    }

    .hero-image {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .profile-image {
        width: 100%;
        max-width: 400px;
        height: 400px;
        border-radius: 50%;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        object-fit: cover;
        border: 4px solid #667eea;
        background-color: #f0f0f0;
    }



    @@media (max-width: 768px) {
        .hero-section {
            grid-template-columns: 1fr;
            text-align: center;
        }

        .hero-title {
            font-size: 2.5rem;
        }

        .hero-actions {
            justify-content: center;
        }
    }
</style>