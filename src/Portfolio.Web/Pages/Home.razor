@page "/"
@inject IApiService ApiService
@inject IAnalyticsService AnalyticsService
@inject IJSRuntime JSRuntime

<PageTitle>Bernard Lusale - Software Engineer Portfolio</PageTitle>

<div class="hero-section">
    <div class="hero-content">
        <h1 class="hero-title">Bernard Lusale</h1>
        <h2 class="hero-subtitle">
            <span id="typing-subtitle"></span>
            <span class="typing-cursor">|</span>
        </h2>
        <p class="hero-description">
            <span id="typing-description"></span>
            <span class="typing-cursor-desc">|</span>
        </p>
        
        <div class="hero-actions">
            <a href="/projects" class="btn btn-primary" @onclick="@(() => TrackEvent("cta_projects_click"))">
                View Projects
            </a>
            <a href="/contact" class="btn btn-outline" @onclick="@(() => TrackEvent("cta_contact_click"))">
                Get In Touch
            </a>
        </div>
        
        <div class="hero-social">
            <SocialLinks />
        </div>
    </div>
    
    <div class="hero-image">
        <img src="/images/dk.jpg" alt="Bernard Lusale Profile" class="profile-image" 
             onerror="this.src='/images/placeholder.svg'; this.alt='Bernard Lusale (placeholder)';" />
    </div>
</div>

<LogoCarousel />

<TrendingProjects />

@code {
    private List<Project> trendingProjects = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadTrendingProjects();
        await AnalyticsService.TrackPageViewAsync("/", "Home");
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await InitializeTypingEffect();
        }
    }

    private async Task LoadTrendingProjects()
    {
        trendingProjects = await ApiService.GetTrendingProjectsAsync();
    }

    private async Task HandleProjectClick(Project project)
    {
        await ApiService.TrackProjectEventAsync(project.Id, "view");
        await AnalyticsService.TrackEventAsync("project_card_click", project.Title);
    }

    private async Task TrackEvent(string eventType)
    {
        await AnalyticsService.TrackEventAsync(eventType);
    }

    private async Task InitializeTypingEffect()
    {
        await Task.Delay(500); // Initial delay
        
        var subtitleText = "Software Engineer & Cybersecurity Specialist";
        var descriptionText = "Passionate about cybersecurity analysis and building secure web applications with modern technologies. Specialized in security testing, vulnerability assessment, and .NET development with a focus on creating robust, scalable solutions that protect digital assets and enhance user experiences.";
        
        await JSRuntime.InvokeVoidAsync("startTypingEffect", subtitleText, descriptionText);
    }
}

<style>
    .hero-section {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
        min-height: calc(100vh - 140px);
        padding: 2rem 0;
        max-width: 1400px;
        margin: 0 auto;
    }

    .hero-content {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .hero-title {
        font-size: clamp(2.5rem, 5vw, 4rem);
        font-weight: 700;
        margin-bottom: 0.75rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        line-height: 1.1;
        letter-spacing: -0.02em;
    }

    .hero-subtitle {
        font-size: clamp(1.1rem, 2.8vw, 1.6rem);
        color: #495057;
        margin-bottom: 1.75rem;
        font-weight: 500;
        line-height: 1.4;
        letter-spacing: 0.01em;
        background: linear-gradient(135deg, #495057 0%, #6c757d 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        position: relative;
        min-height: 2.2em;
    }

    .hero-subtitle::after {
        content: '';
        position: absolute;
        bottom: -0.5rem;
        left: 0;
        width: 60px;
        height: 3px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 2px;
    }

    .typing-cursor,
    .typing-cursor-desc {
        display: inline-block;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: realistic-blink 1.2s infinite;
        font-weight: 400;
        margin-left: 2px;
        opacity: 1;
    }

    .typing-cursor-desc {
        background: #495057;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    @@keyframes realistic-blink {
        0%, 45% { opacity: 1; }
        46%, 54% { opacity: 0; }
        55%, 100% { opacity: 1; }
    }

    .hero-description {
        font-size: clamp(0.95rem, 2.2vw, 1.15rem);
        line-height: 1.8;
        margin-bottom: 2.75rem;
        color: #495057;
        max-width: 650px;
        font-weight: 400;
        text-align: justify;
        hyphens: auto;
        word-spacing: 0.05em;
        background: rgba(255, 255, 255, 0.9);
        padding: 1.5rem;
        border-radius: 12px;
        border-left: 4px solid #667eea;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
        position: relative;
        backdrop-filter: blur(10px);
        min-height: 8em;
    }

    .hero-description::before {
        content: '"';
        position: absolute;
        top: -0.5rem;
        left: 0.5rem;
        font-size: 3rem;
        color: #667eea;
        font-family: Georgia, serif;
        opacity: 0.3;
    }

    .hero-actions {
        display: flex;
        gap: 1.25rem;
        margin-bottom: 2.5rem;
        flex-wrap: wrap;
    }

    .hero-social {
        display: flex;
        justify-content: flex-start;
    }

    .btn {
        padding: 1rem 2.5rem;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        border: 2px solid transparent;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: 160px;
        text-align: center;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }

    .btn-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 30px rgba(102, 126, 234, 0.4);
    }

    .btn-outline {
        border: 2px solid #667eea;
        color: #667eea;
        background: transparent;
    }

    .btn-outline:hover {
        background: #667eea;
        color: white;
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
    }

    .hero-image {
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
    }

    .profile-image {
        width: 100%;
        max-width: 450px;
        height: auto;
        aspect-ratio: 1;
        border-radius: 50%;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
        object-fit: cover;
        border: 6px solid #667eea;
        background-color: #f8f9fa;
        transition: all 0.3s ease;
    }

    .profile-image:hover {
        transform: scale(1.02);
        box-shadow: 0 30px 60px rgba(102, 126, 234, 0.2);
    }

    /* Large Desktop (1200px+) */
    @@media (min-width: 1200px) {
        .hero-section {
            gap: 5rem;
            padding: 3rem 0;
        }
        
        .hero-subtitle {
            font-size: 1.75rem;
            margin-bottom: 2rem;
        }
        
        .hero-description {
            font-size: 1.2rem;
            line-height: 1.9;
            padding: 2rem;
            margin-bottom: 3rem;
        }
        
        .btn {
            padding: 1.125rem 3rem;
            font-size: 1.1rem;
        }
    }

    /* Desktop (992px - 1199px) */
    @@media (max-width: 1199px) and (min-width: 992px) {
        .hero-section {
            gap: 3rem;
        }
        
        .hero-subtitle {
            font-size: 1.5rem;
        }
        
        .hero-description {
            font-size: 1.1rem;
            padding: 1.75rem;
        }
        
        .profile-image {
            max-width: 380px;
        }
    }

    /* Tablet (768px - 991px) */
    @@media (max-width: 991px) and (min-width: 768px) {
        .hero-section {
            grid-template-columns: 1fr;
            gap: 3rem;
            text-align: center;
            min-height: auto;
            padding: 2rem 0;
        }
        
        .hero-image {
            order: -1;
        }
        
        .hero-subtitle {
            font-size: 1.4rem;
        }
        
        .hero-subtitle::after {
            left: 50%;
            transform: translateX(-50%);
        }
        
        .hero-description {
            font-size: 1.05rem;
            text-align: center;
            hyphens: none;
            max-width: 100%;
            margin: 0 auto 2.5rem auto;
        }
        
        .profile-image {
            max-width: 320px;
        }
        
        .hero-social {
            justify-content: center;
        }
        
        .hero-actions {
            justify-content: center;
        }
    }

    /* Mobile (max-width: 767px) */
    @@media (max-width: 767px) {
        .hero-section {
            grid-template-columns: 1fr;
            gap: 2rem;
            text-align: center;
            min-height: auto;
            padding: 1.5rem 0;
        }
        
        .hero-image {
            order: -1;
        }
        
        .hero-subtitle {
            font-size: 1.2rem;
            margin-bottom: 1.5rem;
        }
        
        .hero-subtitle::after {
            left: 50%;
            transform: translateX(-50%);
            width: 40px;
        }
        
        .hero-description {
            font-size: 1rem;
            text-align: left;
            hyphens: auto;
            padding: 1.25rem;
            margin-bottom: 2rem;
            line-height: 1.7;
        }
        
        .profile-image {
            max-width: 280px;
            border-width: 4px;
        }
        
        .hero-actions {
            flex-direction: column;
            align-items: center;
            gap: 1rem;
        }
        
        .btn {
            width: 100%;
            max-width: 280px;
            padding: 0.875rem 2rem;
        }
        
        .hero-social {
            justify-content: center;
        }
    }

    /* Small Mobile (max-width: 480px) */
    @@media (max-width: 480px) {
        .hero-section {
            gap: 1.5rem;
            padding: 1rem 0;
        }
        
        .hero-subtitle {
            font-size: 1.1rem;
            margin-bottom: 1.25rem;
        }
        
        .hero-description {
            font-size: 0.95rem;
            padding: 1rem;
            margin-bottom: 1.5rem;
            line-height: 1.6;
        }
        
        .profile-image {
            max-width: 240px;
            border-width: 3px;
        }
        
        .hero-actions {
            margin-bottom: 2rem;
        }
        
        .btn {
            padding: 0.75rem 1.5rem;
            font-size: 0.95rem;
        }
    }

    /* Landscape Mobile */
    @@media (orientation: landscape) and (max-height: 600px) {
        .hero-section {
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
            min-height: auto;
            padding: 1rem 0;
        }
        
        .hero-image {
            order: 1;
        }
        
        .profile-image {
            max-width: 200px;
        }
        
        .hero-title {
            font-size: 2rem;
        }
        
        .hero-subtitle {
            font-size: 1rem;
            margin-bottom: 1rem;
        }
        
        .hero-subtitle::after {
            left: 0;
            transform: none;
            width: 40px;
        }
        
        .hero-description {
            font-size: 0.9rem;
            margin-bottom: 1.25rem;
            padding: 1rem;
            text-align: left;
        }
        
        .hero-actions {
            flex-direction: row;
            gap: 1rem;
            margin-bottom: 1rem;
        }
        
        .btn {
            padding: 0.625rem 1.5rem;
            font-size: 0.9rem;
            min-width: 120px;
        }
    }

    /* High DPI Displays */
    @@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
        .profile-image {
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.2);
        }
    }

    /* Reduced Motion */
    @@media (prefers-reduced-motion: reduce) {
        .btn,
        .profile-image {
            transition: none;
        }
        
        .btn:hover,
        .profile-image:hover {
            transform: none;
        }
    }

    /* Print Styles */
    @@media print {
        .hero-section {
            grid-template-columns: 1fr;
            gap: 1rem;
            min-height: auto;
        }
        
        .hero-actions {
            display: none;
        }
        
        .hero-social {
            display: none;
        }
    }
</style>