@inject IAnalyticsService AnalyticsService
@implements IDisposable

<div class="live-metrics">
    <div class="metrics-container">
        <div class="metric">
            <span class="metric-value">@metrics.TotalVisitors</span>
            <span class="metric-label">Total Visitors</span>
        </div>
        <div class="metric">
            <span class="metric-value">@metrics.ActiveSessions</span>
            <span class="metric-label">Active Sessions</span>
        </div>
        <div class="metric">
            <span class="metric-value">@metrics.TotalProjectViews</span>
            <span class="metric-label">Project Views</span>
        </div>
    </div>
</div>

@code {
    private AnalyticsMetrics metrics = new();
    private Timer? refreshTimer;

    protected override async Task OnInitializedAsync()
    {
        await LoadMetrics();
        
        // Refresh metrics every 10 seconds for real-time updates
        refreshTimer = new Timer(async _ => await InvokeAsync(LoadMetrics), null, TimeSpan.Zero, TimeSpan.FromSeconds(10));
    }

    private async Task LoadMetrics()
    {
        try
        {
            metrics = await AnalyticsService.GetMetricsAsync();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading metrics: {ex.Message}");
        }
    }

    public void Dispose()
    {
        refreshTimer?.Dispose();
    }
}

<style>
    .live-metrics {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: clamp(0.75rem, 2vw, 1rem);
        border-radius: 8px;
        margin-bottom: 1rem;
    }

    .metrics-container {
        display: flex;
        gap: clamp(1rem, 4vw, 2rem);
        justify-content: center;
        align-items: center;
    }

    .metric {
        text-align: center;
        flex: 1;
        min-width: 0;
    }

    .metric-value {
        display: block;
        font-size: clamp(1.2rem, 3vw, 1.5rem);
        font-weight: bold;
        line-height: 1.2;
    }

    .metric-label {
        font-size: clamp(0.7rem, 1.8vw, 0.8rem);
        opacity: 0.9;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Keep horizontal layout on all devices */
    @@media (max-width: 768px) {
        .live-metrics {
            padding: 0.75rem 0.5rem;
        }
        
        .metrics-container {
            gap: 0.75rem;
        }
        
        .metric-label {
            font-size: 0.7rem;
        }
    }

    /* Very small mobile adjustments */
    @@media (max-width: 480px) {
        .live-metrics {
            padding: 0.6rem 0.4rem;
        }
        
        .metrics-container {
            gap: 0.5rem;
        }
        
        .metric-value {
            font-size: 1.1rem;
        }
        
        .metric-label {
            font-size: 0.65rem;
        }
    }

    /* Landscape mobile optimization */
    @@media (orientation: landscape) and (max-height: 600px) {
        .live-metrics {
            padding: 0.5rem;
            margin-bottom: 0.5rem;
        }
        
        .metric-value {
            font-size: 1rem;
        }
        
        .metric-label {
            font-size: 0.6rem;
        }
    }
</style>